generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  lastName  String?  @map("last_name") // Adding last name field
  email     String   @unique
  password  String
  role      String   @default("athlete")
  height    Int?
  weight    Int?
  events    Event[]
  participatedEvents Event[] @relation("EventParticipants")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  
  // Team relationships
  ownedTeams   Team[]     @relation("OwnedTeams")
  teamMemberships TeamMember[]

  @@map("users")
}

model Event {
  id          String   @id @default(uuid())
  title       String
  description String?
  eventDate   DateTime @map("event_date")
  status      String   @default("future")
  exerciseType String?  @map("exercise_type")
  userId      String   @map("user_id")
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  participants User[]   @relation("EventParticipants")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("events")
}

// Team model for managing trainer teams
model Team {
  id          String   @id @default(uuid())
  name        String
  description String?
  ownerId     String
  owner       User     @relation("OwnedTeams", fields: [ownerId], references: [id])
  members     TeamMember[]
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("teams")
}

// Junction table for team members
model TeamMember {
  id     String @id @default(uuid())
  teamId String
  userId String
  role   String @default("athlete") // athlete or trainer
  
  team   Team   @relation(fields: [teamId], references: [id])
  user   User   @relation(fields: [userId], references: [id])
  
  @@unique([teamId, userId])
  @@map("team_members")
}